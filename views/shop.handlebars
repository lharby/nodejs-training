    <main>
        {{#if hasProducts }}
            {{#each products}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">{{ this.title }}</h1>
                    </header>
                    <div class="card__image">
                        <img src="https://images.rawpixel.com/image_png_800/cHJpdmF0ZS9sci9pbWFnZXMvd2Vic2l0ZS8yMDIyLTA0L3B4NDI3NzYyLWltYWdlLWpvYjcwNi5wbmc.png" alt="Book product">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">{{ this.price }}</h2>
                        <p class="product__description">{{ this.description }}</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to cart</button>
                    </div>
                </article>
            {{/each}}
        {{ else }}
            <p>No products</p>
        {{/if }}
    </main>